@page "/{{multitenant_name|lower}}"
@using Blazorise.DataGrid
@using CruderSimple.Blazor.Interfaces.Services
@using Blazorise.LoadingIndicator

<CardHeader>
    <CruderSimple.Blazor.Components.PageTitle Title="{{multitenant_name}}s"
                                              BreadcrumbItems="@(new Breadcrum[] {
                                            new Breadcrum("/", "{{solution_name}}")})" />
</CardHeader>
<CardBody>
    <ListPage TEntity="{{solution_name}}.Domain.Models.{{multitenant_name}}" TDto="{{multitenant_name}}Dto">
        <Columns>
            <DataGridDateColumn TItem="{{multitenant_name}}Dto" Field="@nameof({{multitenant_name}}Dto.CreatedAt)" Caption="Data de Criação" DisplayFormat="{0:dd/MM/yyyy HH:mm:ss}" Editable Filterable />
            <DataGridColumn TItem="{{multitenant_name}}Dto" Field="@nameof({{multitenant_name}}Dto.Name)" Caption="Nome" Editable Filterable />
        </Columns>
    </ListPage>
</CardBody>
    
